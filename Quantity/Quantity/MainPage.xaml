<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Quantity.MainPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <StackLayout
        HorizontalOptions="Center"
        Spacing="50"
        VerticalOptions="Center">
        <Label
            FontAttributes="Bold"
            FontSize="25"
            HorizontalTextAlignment="Center"
            Text="Quantidade"
            TextColor="Gray" />
        <Label
            x:Name="LBLQty"
            FontSize="50"
            HorizontalTextAlignment="Center"
            Text="0"
            TextColor="Red" />
        <StackLayout Orientation="Horizontal" Spacing="30">
            <Button
                BackgroundColor="White"
                BorderColor="#707070"
                BorderWidth="1"
                Clicked="SumButtom"
                FontSize="50"
                HeightRequest="100"
                Text="+"
                WidthRequest="100" />
            <Button
                BackgroundColor="White"
                BorderColor="#707070"
                BorderWidth="1"
                Clicked="SubButtom"
                FontSize="50"
                HeightRequest="100"
                Text="-"
                WidthRequest="100" />
        </StackLayout>
    </StackLayout>

</ContentPage>
